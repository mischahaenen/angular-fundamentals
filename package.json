{
    "name": "angular-fundamentals",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint:ts": "ng lint",
        "lint:style": "stylelint 'src/**/*.scss'",
        "lint:prettier": "prettier --config .prettierrc --check \"src/**/*.{ts,css,html}\"",
        "lint": "npm run lint:ts && npm run lint:style && npm run lint:prettier",
        "lint:fix": "prettier --config .prettierrc --write \"src/**/*.{ts,css,html}\"",
        "prepare": "husky install"
    },
    "lint-staged": {
        "src/**/*.{ts,css,html}": [
            "npm run lint"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run test"
        }
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^14.2.0",
        "@angular/common": "^14.2.0",
        "@angular/compiler": "^14.2.0",
        "@angular/core": "^14.2.0",
        "@angular/forms": "^14.2.0",
        "@angular/platform-browser": "^14.2.0",
        "@angular/platform-browser-dynamic": "^14.2.0",
        "@angular/router": "^14.2.0",
        "rxjs": "~7.5.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^14.2.1",
        "@angular-eslint/builder": "14.0.3",
        "@angular-eslint/eslint-plugin": "14.0.3",
        "@angular-eslint/eslint-plugin-template": "14.0.3",
        "@angular-eslint/schematics": "14.0.3",
        "@angular-eslint/template-parser": "14.0.3",
        "@angular/cli": "^14.2.1",
        "@angular/compiler-cli": "^14.2.0",
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-angular": "^17.1.0",
        "@types/jasmine": "~3.10.0",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "5.27.1",
        "@typescript-eslint/parser": "5.27.1",
        "eslint": "^8.17.0",
        "husky": "^8.0.1",
        "jasmine-core": "~4.0.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.1.0",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "stylelint": "^14.11.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^28.0.0",
        "typescript": "~4.6.2"
    }
}
